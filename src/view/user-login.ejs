<div class="login-container">
    <h2 class="text-center">Login</h2>
    <% if(error){ %>
        <ul>
            <li class="error-message">
                <%= error.msg %>
            </li>
        </ul>
        <% } %>
            <form action="/login" method="POST">
                <label for="email">Email<span class="value-required">*</span></label>
                <input type="email" id="email" name="email" />

                <label for="password">Password<span class="value-required">*</span></label>
                <input type="password" id="password" name="password" />

                <button type="submit" class="text-center">Submit</button>
                <a href="/forget-password" class="forget-password">Forget Password</a>
            </form>
            <p>Create an account? <a href="/">Register</a></p>
</div>