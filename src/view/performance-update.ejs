<div class="registration">
    <div class="registration-heading">
        <h3>Performance Update<a href="/main_page/view_performance" class="x-pos"><i class="fa-solid fa-xmark"></i></a></h3>
    </div>
    <div class="registration-form">
        <% if(error){ %>
            <ul>
                <li class="error-message">
                    <%= error.msg %>
                </li>
            </ul>
            <% } %>
                <form action="/main_page/view_performance/update/<%= performance._id  %>" method="POST">
                    <div class="registration-left">
                        <label for="employeeId">To Employee<span class="value-required">*</span></label>
                        <input type="text" id="employeeId" value="<%= performance.employeeId.name  %>" disabled/>

                        <label for="reviewerId">Reviewer Name<span class="value-required">*</span></label>
                        <input type="text" id="reviewerId" name="reviewerId" value="<%= performance.reviewerId.name  %>" disabled/>
                    </div>
                    <hr>
                    <div class="registration-right">
                        <label for="rating">Rating<span class="value-required">*</span></label>
                        <input type="number" id="rating" name="rating" value="<%= performance.rating  %>" />
                        <label for="feedback">Feedback<span class="value-required">*</span></label>
                        <input type="text" id="feedback" name="feedback" value="<%= performance.feedback  %>" />
                        <button type="submit" class="text-center">Submit</button>

                    </div>
                </form>
    </div>

</div>